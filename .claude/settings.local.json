{
  "permissions": {
    "allow": [
      "Bash(CGO_ENABLED=1 go build:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "WebFetch(domain:github.com)",
      "Bash(node --version:*)",
      "Bash(npm:*)",
      "Bash(tdd-guard:*)",
      "Bash(where:*)",
      "Bash(go install:*)",
      "Bash(tdd-guard-go:*)",
      "Bash(CGO_ENABLED=1 go test:*)",
      "Bash(ls:*)",
      "Bash(make test:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit|TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "tdd-guard"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "tdd-guard"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup|resume|clear",
        "hooks": [
          {
            "type": "command",
            "command": "tdd-guard"
          }
        ]
      }
    ]
  }
}
